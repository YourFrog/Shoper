<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.shoper">

    <application
            android:name=".AppApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.FastProductAdderActivity"></activity>
        <activity android:name=".ui.CloneShopListActivity" />
        <activity android:name=".ui.GenerateCategoryQRCodeActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity
                android:name=".ui.CreateOrUpdateProductActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.PickerActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.ProductsActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.CreateOrUpdateCategoryActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.MainActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait" />
        <activity
                android:name=".ui.SplashScreenActivity"
                android:configChanges="orientation"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>